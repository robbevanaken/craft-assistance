{# @var plugin \antenna\craftassistance\Plugin #}
{# @var settings \antenna\craftassistance\models\Settings #}

{% import '_includes/forms.twig' as forms %}

{# Logo field #}
{{ forms.elementSelectField({
    label: 'Logo',
    name: 'agencyLogo',
    id: 'agencyLogo',
    elements: settings.agencyLogo|length ? craft.assets.id(settings.agencyLogo).all() : null,
    limit: 1,
    elementType: 'craft\\elements\\Asset',
}) }}

{# Color field #}
{{ forms.colorField({
    first: true,
    label: 'Color',
    name: 'primaryColor',
    value: settings.primaryColor,
    required: true
}) }}

{# Icon color field #}
{{ forms.colorField({
    first: true,
    label: 'Icon color',
    name: 'secondaryColor',
    value: settings.secondaryColor,
    required: true
}) }}

{# Title field #}
{{ forms.textField({
    first: true,
    label: 'Title',
    name: 'assistanceTitle',
    value: settings.assistanceTitle,
    required: true
}) }}

{# Text field #}
{{ forms.textareaField({
    first: true,
    label: 'Text',
    name: 'assistanceText',
    value: settings.assistanceText,
    required: true
}) }}

{# E-mail field #}
{{ forms.textField({
    first: true,
    label: 'E-mail address',
    name: 'assistanceEmail',
    value: settings.assistanceEmail,
    required: true
}) }}
